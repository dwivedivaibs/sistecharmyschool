<div class="page-content">
	<!-- inner page banner -->
	<div class="dlab-bnr-inr overlay-black-dark" style="background-image:url('about-1.jpg');">
		<div class="container">
			<div class="dlab-bnr-inr-entry">
				<h1 class="text-white text-capitalize">
					Recruitments
				</h1>
				<!-- Breadcrumb row -->
				<div class="breadcrumb-row">
					<ul class="list-inline">
						<li>
							<a href="/">
								<i class="fa fa-home"></i>
							</a>
						</li>
						<li>
							Recruitments
						</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
	<div class="content-block">
		<div class="section-full content-inner bg-gray">
			<div class="container">
				<div class="row">
					<div class="col-12">
						<div class="table-responsive">
							<table class="table table-bordered dtt">
								<thead>
									<tr>
										<th>No</th>
										<th>Recruitment Details</th>
										<th>Document</th>
									</tr>
								</thead>
								<tbody>
									<% @vacancies.each_with_index do |vacancy, index|%>
										<tr>
											<td><%= index + 1 %></td>
											<td>
												<strong>
													<%= vacancy.name %>
												</strong>
											</td>
											<td>
												<a href="javascript:void;" target="_blank" class="btn btn-sm btn-default" data-fancybox data-options='{"type" : "iframe", "iframe" : {"preload" : true, "css" : {"width" : "90%"}}}' data-src="<%= vacancy.document.url %>">
													<i class="fa fa-file-pdf-o mr-2"></i>View
												</a>
											</td>
										</tr>
									<% end %>
									</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- contact area END -->
</div>
<script type="text/javascript">
  $(document).ready(function(){
    $('[data-fancybox]').fancybox({
      toolbar: true,
      smallBtn: "auto",
      buttons: [
          "zoom",
          "share",
          "slideShow",
          "fullScreen",
          "download",
          "thumbs",
          "close"
      ],
      btnTpl: {
          'my-zoom': '<button class="fancybox-button" title="{{ZOOM}}">+/-</button>'
      },
      image: {
          preload: true
      },
     clickOutside: "close",
  });
  })
</script>
<style type="text/css">
	img{
		.fancybox-container iframe {position:absolute;top:0;left:0;width:100%; height:100%;}
	}
</style>